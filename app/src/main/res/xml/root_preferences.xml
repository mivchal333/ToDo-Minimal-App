<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/default_header">

        <EditTextPreference
            app:key="default_title"
            app:summary="@string/default_title_description"
            app:title="@string/default_title" />

    </PreferenceCategory>


    <PreferenceCategory app:title="@string/theme_header">

        <SwitchPreferenceCompat
